<?xml version="1.0"?>
<odoo>
    <data>

        <record id="orbeon_project_project_form" model="ir.ui.view">
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
	        <notebook position="inside">
	            <page string="Orbeon Runner Forms">
	                <field name="orbeon_runner_form_ids">
	                    <tree>
		                <field name="builder_name" />
		                <field name="state" />
		                <button name="orbeon_runner_form" string="Form" type="object"
			                icon="fa-external-link" />
	                    </tree>
	                </field>
	            </page>
	        </notebook>
            </field>
        </record>

        <record id="orbeon_project_project_kanban" model="ir.ui.view">
            <field name="name">orbeon.project.project.kanban</field>
            <field name="model">project.project</field>
            <field name="priority" eval="20" />
            <field name="inherit_id"
	           ref="project_type.project_type_view_project_kanban" />
            <field name="arch" type="xml">
	        <data>
	            <xpath expr="//templates" position="before">
	                <field name="orbeon_runner_forms_count" />
	            </xpath>

	            <xpath expr="//div[contains(@class, 'o_project_kanban_boxes')]"
		           position="inside">
	                <a t-if="record.orbeon_runner_forms_count.raw_value" class="o_project_kanban_box"
	                   name="action_orbeon_runner_forms" type="object">
	                    <span class="o_value">
		                <t t-esc="record.orbeon_runner_forms_count.value" />
	                    </span>
	                    <span class="o_label">Forms</span>
	                </a>
	            </xpath>
	        </data>
            </field>
        </record>

        <!-- orbeon runner forms kanban view -->
        <record id="orbeon_project_runner_kanban" model="ir.ui.view">
            <field name="name">orbeon.project.runner.kanban</field>
            <field name="model">orbeon.runner</field>
            <field name="arch" type="xml">
	        <kanban>
	            <templates>
	                <t t-name="kanban-box">
	                    <div class="oe_kanban_global_click">
		                <div class="o_primary">
		                    <!-- <span><t t-esc="record.name.value"/></span> -->
		                </div>
	                    </div>
	                </t>
	            </templates>
	        </kanban>
            </field>
        </record>

    </data>
</odoo>
